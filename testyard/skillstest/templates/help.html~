	<script language='javascript'>
	function displayprofilehelp(){
	    csrftoken = document.frmhelp.csrfmiddlewaretoken.value;
	    postdata = "csrfmiddlewaretoken=" + csrftoken + "&help=profile";
	    var xmlhttp;
	    if (window.XMLHttpRequest){
    		xmlhttp=new XMLHttpRequest();
  	    }
  	    else{
    		xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  	    }
	    xmlhttp.onreadystatechange = function(){
  		if(xmlhttp.readyState == 4 && xmlhttp.status==200){
		    profhlpwin = window.open("", "profilehelpwindow", "width=600, height=600, location=no, menubar=no, scrollbars=yes,toolbar=no,  titlebar=yes, resizable=yes, toolbar=no, status=no");
		    profhlpwin.document.write(xmlhttp.responseText);
		}
	    };
	    xmlhttp.open("POST", '{{ detailhelpurl }}', true);
  	    xmlhttp.send(postdata);
	}

